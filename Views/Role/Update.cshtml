@model BugTracker.ViewModels.RoleViewModel




<h1>Rename Role</h1>
@using (var form = Html.BeginForm("Update", "Role", FormMethod.Post))
{
    <div class="input-group">
        @* Textbox *@
        @Html.TextBoxFor(model => model.currRole.Name, new { @class = "form-control" })

        @* Update button *@
        <div class="input-group-append">
            <button type="submit" class="btn btn-success">Rename</button>
        </div>
    </div>
}

